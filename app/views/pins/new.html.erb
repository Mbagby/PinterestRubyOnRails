<h1>Add a new Pin</h1>

<!-- Added notes from lecture -->
<% if (@pin.errors.any?) %>
	<% @pin.errors.full_message.each do |error|%>
	<p style= "color:red;">
		<%= error%>
	</p>
	<%end %>
<%end %>



<%= form_for @pin do |f|%>
	<div>
		<%= f.label :name%>
		<%= f.text_field :name%>
	</div>
	<div>
		<%= f.label :url%>
		<%= f.text_field :url%>
	</div>
	<div>
		<%= f.label :comment%>
		<%= f.text_field :comment%>
	</div>
	<div>
		<%= f.label :image%>
		<%= f.text_field :image%>
	</div>
	<div>
		<%= f.submit%>
	</div>
<% end %>
